@model ForumProject.Models.ForumModels.ForumViewModels.CreatePostViewModel
@{
    ViewBag.Title = "EditPost";
   // Layout = "~/Views/Shared/_Layout.cshtml";
}

        @using (Html.BeginForm("EditPost", "Home", FormMethod.Post, new { @class = "", role = "form" }))
        {
            <div class="headerTitle" style="margin-left:15px; font-size:24px">
                <h2>Edit Post</h2>
                @Html.AntiForgeryToken()
            </div>
            @Html.HiddenFor(m => m.PostDiscussionId)
            <div class="form-group" style="margin-left:15px; color: #66615B">
                @Html.LabelFor(m => m.PostText)
                @Html.TextAreaFor(m => m.PostText, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PostText)

            </div>
            <div class="form-group" style="margin-left:15px">
                <button type="submit" class="btn-editpost ">Edit</button>
            </div>

        }

  
